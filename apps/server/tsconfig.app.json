{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ESNext"
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.e2e-spec.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"]
}
